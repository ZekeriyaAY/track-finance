# Environment Configuration Template
# Copy this file to .env.docker for production or .env for development
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
POSTGRES_DB=finance_db
POSTGRES_USER=finance_user
POSTGRES_PASSWORD=finance_pass
DATABASE_URL=postgresql://finance_user:finance_pass@db:5432/finance_db

# For development (SQLite - uncomment and comment PostgreSQL above)
# DATABASE_URL=sqlite:///finance.db
# For external PostgreSQL (edit credentials as needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/your_db

# Application Ports
WEB_PORT=5001              # Flask web application port
PGADMIN_PORT=8080          # pgAdmin web interface port

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@trackfinance.com     # pgAdmin login email
PGADMIN_DEFAULT_PASSWORD=admin123                # pgAdmin login password  
PGADMIN_CONFIG_SERVER_MODE=False                 # pgAdmin server mode (False for single user)

# Health Check Configuration (Docker containers)
HEALTH_CHECK_INTERVAL=30s          # How often to check web app health
HEALTH_CHECK_TIMEOUT=10s           # Health check timeout
HEALTH_CHECK_RETRIES=3             # Health check retry attempts

# Database Health Check Configuration (PostgreSQL container)
DB_HEALTH_CHECK_INTERVAL=10s       # How often to check database health
DB_HEALTH_CHECK_TIMEOUT=5s         # Database health check timeout
DB_HEALTH_CHECK_RETRIES=5          # Database health check retry attempts

# Security
CSRF_ENABLED=True                  # Enable CSRF protection

# Internationalization (Babel)
LANGUAGES=en,tr                    # Supported languages (English, Turkish)

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_in_production
GRAFANA_ROOT_URL=http://localhost:3000
GRAFANA_PLUGINS=

