# Environment Configuration Template
# Copy this file to .env and customize for your environment

# ======================================
# FLASK CONFIGURATION
# ======================================
# For production: FLASK_ENV=production, FLASK_DEBUG=0
# For debug mode: FLASK_ENV=development, FLASK_DEBUG=1
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-super-secret-key-change-this-in-production

# ======================================
# DATABASE CONFIGURATION
# ======================================
POSTGRES_DB=finance_db
POSTGRES_USER=finance_user
POSTGRES_PASSWORD=finance_pass
DATABASE_URL=postgresql://finance_user:finance_pass@db:5432/finance_db

# ======================================
# APPLICATION PORTS
# ======================================
WEB_PORT=5000
PGADMIN_PORT=8080
GRAFANA_PORT=3000

# ======================================
# PGADMIN CONFIGURATION
# ======================================
PGADMIN_DEFAULT_EMAIL=admin@trackfinance.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_CONFIG_SERVER_MODE=False

# ======================================
# GRAFANA CONFIGURATION
# ======================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_in_production
GRAFANA_ROOT_URL=http://localhost:3000
GRAFANA_PLUGINS=

