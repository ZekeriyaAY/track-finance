# Production Environment for Docker
# This file is used by docker-compose.yml for container configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
POSTGRES_DB=finance_db
POSTGRES_USER=finance_user
POSTGRES_PASSWORD=finance_pass
DATABASE_URL=postgresql://finance_user:finance_pass@db:5432/finance_db

# Application Ports
WEB_PORT=5001
PGADMIN_PORT=8080

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@trackfinance.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_CONFIG_SERVER_MODE=False

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Database Health Check Configuration
DB_HEALTH_CHECK_INTERVAL=10s
DB_HEALTH_CHECK_TIMEOUT=5s
DB_HEALTH_CHECK_RETRIES=5

# Security
CSRF_ENABLED=True

# Babel
LANGUAGES=en,tr

